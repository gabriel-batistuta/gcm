<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="card mt-5 shadow">
        <div class="card-header bg-primary text-white text-center">
          <h4>Login de Usu√°rio</h4>
        </div>
        <div class="card-body">
          <%= form_with url: login_path, local: true do |form| %>
            <div class="mb-3">
              <%= form.label :email, "Email", class: "form-label" %>
              <%= form.email_field :email, placeholder: "Digite seu email", class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= form.label :password, "Senha", class: "form-label" %>
              <%= form.password_field :password, placeholder: "Digite sua senha", class: "form-control" %>
            </div>
            <div class="d-grid">
              <%= form.submit "Entrar", class: "btn btn-success" %>
            </div>
          <% end %>
          <div class="text-center mt-3">
            <%= link_to "Esqueceu a senha?", password_reset_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
