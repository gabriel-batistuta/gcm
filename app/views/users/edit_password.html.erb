<!-- app/views/users/edit_password.html.erb -->
<div class="container">
  <h1>Altere sua senha</h1>
  <%= form_with model: @user, url: update_password_path, local: true, method: :patch do |form| %>
    <div class="mb-3">
      <%= form.label :password, "Nova Senha" %>
      <%= form.password_field :password, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :password_confirmation, "Confirme a Nova Senha" %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
    <div class="d-grid">
      <%= form.submit "Atualizar Senha", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
