<!DOCTYPE html>
<html>
  <head>
    <title>Gest√£o Prefeitura</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Favicon com Asset Path -->
    <%= favicon_link_tag asset_path('gestao.png') %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <!-- Link do Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <%= stylesheet_link_tag "armas", media: "all", "data-turbolinks-track": "reload" %>
    <%= stylesheet_link_tag "geral", media: "all", "data-turbolinks-track": "reload" %>
    <script defer>
      document.addEventListener("keydown", function (event) {
        if (event.key === "Escape" || event.keyCode === 27) {
          const voltarButton = document.querySelector(".voltar_key");
          if (voltarButton) {
            voltarButton.click();
          }
        }
      });
    </script>
  </head>
  <body>
    <%= yield %>

    <!-- Scripts do Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
