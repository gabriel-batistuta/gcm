<% content_for :title, "Editar Arma" %>

<h1>Editar Arma</h1>

<div class="form-container">
  <%= form_with(model: @arma, local: true) do |form| %>
    <div class="form-group">
      <label class="form-label">Modelo:</label>
      <%= form.text_field :modelo, placeholder: "Modelo", class: "form-input" %>
    </div>
    
    <div class="form-group">
      <label class="form-label">Registro:</label>
      <%= form.text_field :registro, placeholder: "Registro", class: "form-input" %>
    </div>
    
    <div class="form-group">
      <label class="form-label">Emprestada:</label>
      <%= form.select :emprestada, [["NÃ£o", false], ["Sim", true]], {}, class: "form-input" %>
    </div>
    
    <div class="form-actions">
      <%= form.submit "Salvar", class: "form-button btn btn-success" %>
    </div>

  <% end %>
</div>

<div class="voltar-home">
  <%= link_to "Voltar para Armas", armas_path, class: "btn btn-primary" %>
</div>