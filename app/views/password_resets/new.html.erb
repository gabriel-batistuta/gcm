<!-- app/views/password_resets/new.html.erb -->
<div class="container">
  <h1>Recuperação de Senha</h1>
  <%= form_with url: password_reset_path, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :email, "Digite seu e-mail" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>
    <div class="d-grid">
      <%= form.submit "Enviar Instruções", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
